<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FileExplorer.UI.UserControls.ItemPropertiesPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileExplorer.UI.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="using:Models.Storage.Additional.Properties"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:templateBehaciors="using:FileExplorer.UI.Behaviors.Template"
    xmlns:contentSelectors="using:FileExplorer.UI.ContentSelectors"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="FrameworkElement" x:Key="PanelItem">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0 6" />
        </Style>

        <DataTemplate x:Name="DirectoryItemPropertiesView" x:DataType="properties:DirectoryItemBasicProperties">
            <StackPanel Padding="10 5">

                <Image Source="{x:Bind Thumbnail.Source}" Height="100" Style="{StaticResource PanelItem}" />

                <TextBlock Text="{x:Bind Name}" Style="{StaticResource TitleTextBlockStyle}" 
                           HorizontalAlignment="Center" 
                           Margin="0 6"
                           FontSize="25"/>

                <TextBlock Text="{x:Bind Name}" Style="{StaticResource BodyTextBlockStyle}" 
                           HorizontalAlignment="Center" 
                           Margin="0 6"/>

                <RichTextBlock Style="{StaticResource BodyRichTextBlockStyle}">
                    <Paragraph>
                        <Run Text="Modification date: " />
                        <Run Text="{x:Bind ModifiedDate}" />
                    </Paragraph>
                </RichTextBlock>

                <RichTextBlock Style="{StaticResource BodyRichTextBlockStyle}">
                    <Paragraph>
                        <Run Text="Creation date: " />
                        <Run Text="{x:Bind CreationTime}" />
                    </Paragraph>
                </RichTextBlock>

                <RichTextBlock Style="{StaticResource BodyRichTextBlockStyle}">
                    <Paragraph>
                        <Run Text="Path: " />
                        <Run Text="{x:Bind Path}" />
                    </Paragraph>
                </RichTextBlock>

                <RichTextBlock Style="{StaticResource BodyRichTextBlockStyle}" 
                               Visibility="{x:Bind HasSize, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Paragraph>
                        <Run Text="Size: " />
                        <Run Text="{x:Bind Size}" />
                    </Paragraph>
                </RichTextBlock>

            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Name="DrivePropertiesView" x:DataType="properties:DriveBasicProperties">
            <TextBlock Text="{x:Bind Name}" />
        </DataTemplate>

        <contentSelectors:PropertiesPaneTemplateSelector x:Name="TemplateSelector"
            DriveTemplate="{StaticResource DrivePropertiesView}"
            DirectoryItemTemplate="{StaticResource DirectoryItemPropertiesView}" />

    </UserControl.Resources>

    <Grid Width="300" Visibility="{x:Bind ViewModel.PaneVisibility, Mode=OneWay}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


