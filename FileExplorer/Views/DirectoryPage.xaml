<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FileExplorer.Views.DirectoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileExplorer.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:models="using:FileExplorer.Models"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:FileExplorer.UI.Behaviors"
    xmlns:viewModels="using:FileExplorer.ViewModels"
    xmlns:input="using:CommunityToolkit.Mvvm.Input"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="GridItemTemplate" x:DataType="models:DirectoryItemModel">
            <StackPanel  Padding="10  25 10 10">
                <Image Source="../Resources/Folder.png" Height="95"  />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="{x:Bind Name, Mode=OneWay}" 
                               VerticalAlignment="Center"
                               Visibility="{x:Bind IsRenamed, Mode=OneWay, 
                                        Converter = {StaticResource BoolToVisibilityConverter}, 
                                        ConverterParameter=True}" />
                    <TextBox  Text="{x:Bind Name, Mode=TwoWay}"
                              AcceptsReturn="True"
                              Padding="0 5 0 0"
                              Visibility="{x:Bind IsRenamed, Mode=OneWay,
                                Converter = {StaticResource BoolToVisibilityConverter}}">


                        <interactivity:Interaction.Behaviors>
                            <interactivity:BehaviorCollection>

                                <behaviors:RenameTextBoxBehavior
                                    EndRenamingCommand="{StaticResource EndRenamingCommand}"
                                    IsRenamed="{x:Bind IsRenamed, Mode=TwoWay}"  />

                            </interactivity:BehaviorCollection>
                        </interactivity:Interaction.Behaviors>
                    </TextBox>
                </Grid>
            </StackPanel>
        </DataTemplate>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Padding" Value="10 8"  />
            <Setter Property="Margin" Value="0 0 10 0" />
        </Style>
    </Page.Resources>

    <Grid Padding="20 20 5 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <DropDownButton
                    Style="{StaticResource MenuButton}" 
                    ToolTipService.ToolTip="New File"
                    ToolTipService.Placement="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 0 7 0 " VerticalAlignment="Center">New</TextBlock>
                        <FontIcon FontSize="12" Glyph="&#xE710;" />
                    </StackPanel>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem 
                                Command="{x:Bind ViewModel.CreateFileCommand}"
                                Text="File" />
                            <MenuFlyoutItem 
                                Command="{x:Bind ViewModel.CreateDirectoryCommand}"
                                Text="Folder"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <Button 
                    Style="{StaticResource MenuButton}"
                    ToolTipService.ToolTip="Copy"
                    ToolTipService.Placement="Bottom">
                    <FontIcon FontSize="17" Glyph="&#xE8C8;" />
                </Button>
                <Button 
                    Style="{StaticResource MenuButton}"
                    ToolTipService.ToolTip="Cut"
                    ToolTipService.Placement="Bottom">
                    <FontIcon FontSize="17" Glyph="&#xE8C6;" />
                </Button>
                <Button 
                    Style="{StaticResource MenuButton}"
                    ToolTipService.ToolTip="Paste"
                    ToolTipService.Placement="Bottom">
                    <FontIcon FontSize="17" Glyph="&#xE77F;" />
                </Button>
                <Button 
                    Command="{x:Bind ViewModel.BeginRenamingItemCommand}"
                    Style="{StaticResource MenuButton}"
                    ToolTipService.ToolTip="Rename"
                    ToolTipService.Placement="Bottom">
                    <FontIcon FontSize="17" Glyph="&#xE8AC;" />
                </Button>
                <Button 
                    Style="{StaticResource MenuButton}"
                    Command="{x:Bind ViewModel.DeleteSelectedItemsCommand}"
                    ToolTipService.ToolTip="TryDelete"
                    ToolTipService.Placement="Bottom">
                    <FontIcon FontSize="17" Glyph="&#xE74D;" />
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <DropDownButton 
                    Style="{StaticResource MenuButton}"
                    ToolTipService.ToolTip="Change View Of Items"
                    ToolTipService.Placement="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 0 7 0 " VerticalAlignment="Center">View</TextBlock>
                        <FontIcon FontSize="12" Glyph="&#xF246;"  />
                    </StackPanel>
                </DropDownButton>
                <DropDownButton 
                    Style="{StaticResource MenuButton}"
                    ToolTipService.ToolTip="Apply Filter"
                    ToolTipService.Placement="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 0 7 0 " VerticalAlignment="Center">Filter</TextBlock>
                        <FontIcon FontSize="12" Glyph="&#xE71C;"  />
                    </StackPanel>
                </DropDownButton>
                <Button 
                    Style="{StaticResource MenuButton}" 
                    ToolTipService.ToolTip="File Details"
                    ToolTipService.Placement="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 0 7 0 " VerticalAlignment="Center">Details</TextBlock>
                        <FontIcon FontSize="14" Glyph="&#xE946;" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <controls:AdaptiveGridView Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.DirectoryItems}" 
            ItemTemplate="{StaticResource GridItemTemplate}"
            SelectionMode="Extended"
            DesiredWidth="160"
            >

            <interactivity:Interaction.Behaviors>
                <behaviors:MultiSelectionBehavior SelectedItems="{x:Bind ViewModel.SelectedItems}" />
            </interactivity:Interaction.Behaviors>
        </controls:AdaptiveGridView>

        <interactivity:Interaction.Behaviors>
            <behaviors:KeyPressedBehavior Key="Delete" Command="{x:Bind ViewModel.DeleteSelectedItemsCommand}" />
        </interactivity:Interaction.Behaviors>
    </Grid>
</Page>

