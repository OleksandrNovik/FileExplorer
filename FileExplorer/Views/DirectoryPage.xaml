<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FileExplorer.Views.DirectoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileExplorer.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:systemIO="using:System.IO"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid Padding="20 20 8 5">
        <GridView ItemsSource="{x:Bind Path=ViewModel.DirectoryItems}" SelectionMode="Extended">
            <GridView.ItemTemplate>
                <DataTemplate x:Key="ItemTemplate" x:DataType="systemIO:FileSystemInfo">
                    <StackPanel Padding="10  25 10 10">
                        <Image Source="../Resources/Folder.png" Height="95"/>
                        <TextBlock Text="{x:Bind Path=Name}" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

    </Grid>
</Page>

