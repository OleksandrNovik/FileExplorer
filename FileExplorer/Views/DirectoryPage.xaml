<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FileExplorer.Views.DirectoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileExplorer.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:FileExplorer.UI.Behaviors"
    xmlns:toolkitBehaviors="using:CommunityToolkit.WinUI.UI.Behaviors"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:ui="using:FileExplorer.UI"
    xmlns:generalBehaviors="using:FileExplorer.UI.Behaviors.General"
    xmlns:contextMenu="using:FileExplorer.UI.Behaviors.ContextMenu"
    xmlns:userControls="using:FileExplorer.UI.UserControls"
    xmlns:collections="using:FileExplorer.UI.Behaviors.Collections"
    xmlns:storage="using:Models.Contracts.Storage"
    xmlns:primitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives"
    xmlns:dataGridBehaviors="using:FileExplorer.UI.Behaviors.DataGrid"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <DataTemplate x:Key="GridItemTemplate" x:DataType="storage:IDirectoryItem">
            <Grid  Padding="10  20 10 10" 
                   ToolTipService.Placement="Bottom">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Image Source="{x:Bind Thumbnail.Source, Mode=OneWay}" />
                <Grid Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="{x:Bind Name, Mode=OneWay}" 
                               VerticalAlignment="Center"
                               Visibility="{x:Bind IsRenamed, Mode=OneWay, 
                                        Converter = {StaticResource BoolToVisibilityConverter}, 
                                        ConverterParameter=True}" />

                    <TextBox  Text="{x:Bind Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              TextWrapping="Wrap"
                              Padding="0 5 0 0"
                              Visibility="{x:Bind IsRenamed, Mode=OneWay,
                                Converter = {StaticResource BoolToVisibilityConverter}}">
       

                        <interactivity:Interaction.Behaviors>
                            <interactivity:BehaviorCollection>

                                <behaviors:FocusOnConditionBehavior
                                    Condition="{x:Bind IsRenamed, Mode=TwoWay}"
                                    />

                                <generalBehaviors:LostFocusBehavior 
                                    Command="{Binding Path=EndRenamingIfNeededCommand, Source={StaticResource FileOperations}}"
                                    CommandParameter="{x:Bind}"
                                    />

                                <toolkitBehaviors:KeyDownTriggerBehavior Key="Enter">
                                    <core:InvokeCommandAction 
                                        Command="{Binding Path=EndRenamingItemCommand, Source={StaticResource FileOperations}}"
                                        CommandParameter="{x:Bind}" />
                                </toolkitBehaviors:KeyDownTriggerBehavior>

                            </interactivity:BehaviorCollection>
                        </interactivity:Interaction.Behaviors>
                    </TextBox>
                </Grid>

                <interactivity:Interaction.Behaviors>
                    <generalBehaviors:DoubleClickBehavior Command="{Binding Path=OpenCommand, Source={StaticResource FileOperations}}" 
                                                          CommandParameter="{x:Bind}"  />
                </interactivity:Interaction.Behaviors>
            </Grid>
        </DataTemplate>

        <DataTemplate x:DataType="storage:IDirectoryItem" x:Key="TableThumbnailAndNameEditingCellTemplate">
            <Grid Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Source="{x:Bind Thumbnail.Source, Mode=OneWay}" />

                <userControls:EditableText Grid.Column="2" VerticalAlignment="Center"
                                          Text="{x:Bind Name, Mode=TwoWay}"
                                          IsEdited="{x:Bind IsRenamed, Mode=OneWay}">

                    <userControls:EditableText.TextBoxBehaviors>

                        <interactivity:BehaviorCollection>

                            <behaviors:FocusOnConditionBehavior
                                Condition="{x:Bind IsRenamed, Mode=TwoWay}" />

                            <generalBehaviors:LostFocusBehavior 
                                Command="{Binding Path=EndRenamingIfNeededCommand, 
                                            Source={StaticResource FileOperations}}"
                                CommandParameter="{x:Bind}" />

                            <toolkitBehaviors:KeyDownTriggerBehavior Key="Enter">
                                <core:InvokeCommandAction 
                                    Command="{Binding Path=EndRenamingItemCommand, 
                                            Source={StaticResource FileOperations}}"
                                    CommandParameter="{x:Bind}" />
                            </toolkitBehaviors:KeyDownTriggerBehavior>

                            <toolkitBehaviors:KeyDownTriggerBehavior Key="Escape">
                                <core:InvokeCommandAction 
                                    Command="{Binding Path=EndRenamingItemCommand, 
                                            Source={StaticResource FileOperations}}"
                                    CommandParameter="{x:Bind}" />
                            </toolkitBehaviors:KeyDownTriggerBehavior>

                        </interactivity:BehaviorCollection>

                    </userControls:EditableText.TextBoxBehaviors>

                </userControls:EditableText>
            </Grid>
        </DataTemplate>

    </Page.Resources>

    <Grid Padding="15 10" KeyboardAcceleratorPlacementMode="Hidden">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"  />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--<controls:AdaptiveGridView x:Name="DirectoryItemsGrid"
                                       StretchContentForSingleRow="False"
                                       DesiredWidth="180"
                                       ItemHeight="160"
                                       ItemsSource="{x:Bind ViewModel.DirectoryItems, Mode=OneWay}" 
                                       ItemTemplate="{StaticResource GridItemTemplate}"
                                       SelectionMode="Extended">

                <controls:AdaptiveGridView.ContextFlyout>
                    <ui:BuildingMenuFlyout>
                        <interactivity:Interaction.Behaviors>
                            <contextMenu:MenuFlyoutBuildingBehavior Builder="{x:Bind ViewModel}" />
                        </interactivity:Interaction.Behaviors>
                    </ui:BuildingMenuFlyout>
                </controls:AdaptiveGridView.ContextFlyout>

                <interactivity:Interaction.Behaviors>

                    <collections:MultiSelectionBehavior SelectedItems="{x:Bind ViewModel.SelectedItems, Mode=OneWay}" />

                    <contextMenu:GridViewContextDialogBehavior />

                </interactivity:Interaction.Behaviors>
            </controls:AdaptiveGridView>-->

            <controls:DataGrid 
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                CanUserReorderColumns="False"
                CanUserSortColumns="True" 
                IsReadOnly="True"
                SelectionMode="Extended"
                ItemsSource="{x:Bind ViewModel.DirectoryItems, Mode=OneWay}">

                <controls:DataGrid.Resources>
                    <Brush x:Key="TransparentColor">Transparent</Brush>
                    <StaticResource x:Key="DataGridColumnHeaderBackgroundColor" ResourceKey="TransparentColor"/>
                </controls:DataGrid.Resources>

                <controls:DataGrid.Columns>

                    <controls:DataGridTemplateColumn Header="Name" CellTemplate="{StaticResource TableThumbnailAndNameEditingCellTemplate}" />

                    <controls:DataGridTextColumn 
                        Header="Change date" 
                        Binding="{Binding Path=LastAccess, Mode=OneWay}"  />

                    <controls:DataGridTextColumn 
                        Header="Type" 
                        Binding="{Binding Path=LastAccess, Mode=OneWay}"  />

                    <controls:DataGridTextColumn
                        Header="Size" Width="*"
                        Binding="{Binding Path=Size, Mode=OneWay}"  />

                </controls:DataGrid.Columns>

                <interactivity:Interaction.Behaviors>
                   <interactivity:BehaviorCollection>

                       <collections:DirectoryItemDoubleClickBehavior 
                           Command="{Binding Path=OpenCommand, Source={StaticResource FileOperations}}" />

                        <dataGridBehaviors:MultipleSelectionDataGridBehavior 
                            SelectedItems="{x:Bind ViewModel.SelectedItems}" />

                   </interactivity:BehaviorCollection>
                </interactivity:Interaction.Behaviors>

            </controls:DataGrid>

            <userControls:DirectoryItemInfoPane Grid.Column="1" />

        </Grid>

        <StackPanel Grid.Row="1" 
            Padding="15  5 15 0"
            Grid.Column="0" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Bottom" 
            Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" Margin="0 0 7 0">
                <TextBlock Text="{x:Bind ViewModel.DirectoryItems.Count, Mode=OneWay}" Margin="4 0" />
                <TextBlock Text="items" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="7 0">
                <TextBlock Text="{x:Bind ViewModel.SelectedItems.Count, Mode=OneWay}" Margin="4 0" />
                <TextBlock Text="items selected" />
            </StackPanel>
        </StackPanel>

        <interactivity:Interaction.Behaviors>
            <!--TODO: HotKey2 Del - Delete item-->
            <toolkitBehaviors:KeyDownTriggerBehavior Key="Delete">
                <core:InvokeCommandAction Command="{x:Bind ViewModel.FileOperations.RecycleSelectedItemsCommand}" />
            </toolkitBehaviors:KeyDownTriggerBehavior>
        </interactivity:Interaction.Behaviors>
        <Grid.KeyboardAccelerators>
            <!--TODO: HotKey1 Ctrl+R - Rename-->
            <ui:CommandKeyboardAccelerator 
                Modifiers="Control" Key="R"
                Command="{x:Bind ViewModel.FileOperations.BeginRenamingSelectedItemCommand}"
            />
            <ui:CommandKeyboardAccelerator 
                Modifiers="Shift" Key="Delete"
                Command="{x:Bind ViewModel.FileOperations.DeleteSelectedItemsCommand}"
            />
            <!--TODO: HotKey3 Ctrl+A - SelectAll-->
            <!--<KeyboardAccelerator Modifiers="Control" Key="A" Invoked="SelectAllItems" />-->
        </Grid.KeyboardAccelerators>
    </Grid>
</Page>

